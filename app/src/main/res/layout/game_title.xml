                android:textSize="14sp"
                app:fontFamily="monospace"
                app:layout_constraintStart_toEndOf="@+id/spygame"
                app:layout_constraintTop_toBottomOf="@+id/group1" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="251dp"
                android:layout_height="76dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Did you finish your homework? I am watching you."
                android:textSize="14sp"
                app:fontFamily="monospace"
                app:layout_constraintStart_toEndOf="@+id/dog2"
                app:layout_constraintTop_toBottomOf="@+id/uservivi4" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="251dp"
                android:layout_height="76dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Don't tell Mom Frankie is in my room!!!!!!!"
                android:textSize="14sp"
                app:fontFamily="monospace"
                app:layout_constraintStart_toEndOf="@+id/imageView12"
                app:layout_constraintTop_toBottomOf="@+id/uservivi6" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="251dp"
                android:layout_height="76dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Ask Your Mom."
                android:textSize="14sp"
                app:fontFamily="monospace"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toBottomOf="@+id/uservivi5" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="251dp"
                android:layout_height="76dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="Made by two human slaves, Ella Chang &amp; Lillian Jiang"
                android:textSize="14sp"
                app:fontFamily="monospace"
                app:layout_constraintStart_toEndOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/uservivi7" /></androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>